<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/material">

    <fragment
        android:id="@+id/material"
        android:name="com.example.crs.MaterialVariantFragment"
        android:label="Welcome">
        <action
            android:id="@+id/action_material_to_image"
            app:destination="@id/image"
            app:enterAnim="@anim/nav_custom_enter_anim"
            app:exitAnim="@anim/nav_custom_exit_anim"
            app:popEnterAnim="@anim/nav_custom_pop_enter_anim"
            app:popExitAnim="@anim/nav_custom_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/image"
        android:name="com.example.crs.OutlineImageVariantFragment"
        android:label="Image">
        <action
            android:id="@+id/action_image_to_material"
            app:destination="@id/material"
            app:enterAnim="@anim/nav_custom_enter_anim"
            app:exitAnim="@anim/nav_custom_exit_anim"
            app:popEnterAnim="@anim/nav_custom_pop_enter_anim"
            app:popExitAnim="@anim/nav_custom_pop_exit_anim" />
        <action
            android:id="@+id/action_image_to_widget"
            app:destination="@id/widget"
            app:enterAnim="@anim/nav_custom_enter_anim"
            app:exitAnim="@anim/nav_custom_exit_anim"
            app:popEnterAnim="@anim/nav_custom_pop_enter_anim"
            app:popExitAnim="@anim/nav_custom_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/widget"
        android:name="com.example.crs.OutlineWidgetVariantFragment"
        android:label="Widget">
        <action
            android:id="@+id/action_widget_to_image"
            app:destination="@id/image"
            app:enterAnim="@anim/nav_custom_enter_anim"
            app:exitAnim="@anim/nav_custom_exit_anim"
            app:popEnterAnim="@anim/nav_custom_pop_enter_anim"
            app:popExitAnim="@anim/nav_custom_pop_exit_anim" />
    </fragment>

</navigation>